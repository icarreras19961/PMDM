<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="287dp"
        android:layout_height="234dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bici1" />

    <Button
        android:id="@+id/buttonEmpAnim"
        android:layout_width="238dp"
        android:layout_height="44dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="40dp"
        android:text="Comenzar animacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonApagAnim"
        android:layout_width="238dp"
        android:layout_height="41dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="36dp"
        android:text="Apagar animacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEmpAnim"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonVolverMain"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="36dp"
        android:text="Volver al inicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonApagAnim"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>