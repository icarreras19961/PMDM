<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonAnimacion"
        android:layout_width="232dp"
        android:layout_height="47dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="144dp"
        android:text="Animacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMapa"
        android:layout_width="232dp"
        android:layout_height="47dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="64dp"
        android:text="Mapa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVector" />

    <TextView
        android:id="@+id/textViewMapa"
        android:layout_width="232dp"
        android:layout_height="19dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="8dp"
        android:text="N intentos:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMapa" />

    <Button
        android:id="@+id/buttonVector"
        android:layout_width="232dp"
        android:layout_height="47dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="72dp"
        android:text="Vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAnimacion" />

    <TextView
        android:id="@+id/textViewAnim"
        android:layout_width="234dp"
        android:layout_height="20dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:text="Segundos en la animacion: 0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAnimacion" />

    <TextView
        android:id="@+id/textViewVector"
        android:layout_width="233dp"
        android:layout_height="21dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="12dp"
        android:text="N intentos:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVector" />

    <Button
        android:id="@+id/buttonActions"
        android:layout_width="228dp"
        android:layout_height="46dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="36dp"
        android:text="Actions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMapa" />

</androidx.constraintlayout.widget.ConstraintLayout>